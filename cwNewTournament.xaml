<Window x:Class="WpfTournament.cwNewTournament"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый турнир" 
        Style="{StaticResource AllWindows}"
        Closing="OnWindowClosing">
    <Window.Background>
        <ImageBrush ImageSource="Images/Res/TwoPanels.jpg"/>
    </Window.Background>

    <Window.Resources>
        <Style x:Key="ContentPanels" TargetType="Grid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        </Style>
    </Window.Resources>

    <Grid Margin="30,34,30,83">
        <!--Просто задает разметку-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Style="{StaticResource ContentPanels}" Grid.Column="0" Grid.Row="0" Margin="0" Background="White">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="30" Color="#FF959595" ShadowDepth="20" Opacity="0.7"/>
            </Grid.Effect>
            <ComboBox HorizontalAlignment="Left" Margin="30,50,30,0" VerticalAlignment="Top" Width="288" Height="34" BorderBrush="White" OpacityMask="#FF8B4C4C" FontFamily="Enchanted Land cyr-lat" FontSize="14">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF5BE71" Offset="0.413"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
            </ComboBox>
        </Grid>
        
        <Grid Grid.Column="1" Grid.Row="0">

        </Grid>
        
        <Grid Style="{StaticResource ContentPanels}" Grid.Column="2" Grid.Row="0">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="30" Color="#FF959595" ShadowDepth="20" Opacity="0.7"/>
            </Grid.Effect>
            <WebBrowser Name="InfoAbout" OpacityMask="White"/>
        </Grid>
        
    </Grid>

</Window>
